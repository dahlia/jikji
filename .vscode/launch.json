{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno: Run",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "-A",
        "${file}"
      ],
      "attachSimplePort": 9229
    },
    {
      "name": "Deno: Test",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--inspect-brk",
        "-A",
        "${file}"
      ],
      "attachSimplePort": 9229
    }
  ]
}
